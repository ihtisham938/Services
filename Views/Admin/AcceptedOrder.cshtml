<div class="main-container">


    <div class="heading">
        <h1 class="heading__title">Ongoing Projects</h1>
        <p class="credit">You have to complete following orders</p>



        @{
            int i = 0;


            foreach (var item in Model)
            {

                if (item.SellerName == User.Identity.Name && item.Status == "Approved")
                {
                    i += 1;
                }

            }
            if (i == 0)
            {
                <p style="color:red; padding-top:5em; ">No data available</p>

            }
        }
    </div>
    @foreach (var item in Model)
    {


        if (item.SellerName == User.Identity.Name && item.Status == "Approved")
        {
            <div class="cards">

                <div class="card card-3">
                    <div class="card__icon"><i class="fas fa-bolt"></i></div>
                    <p class="card__exit"><i class="fas fa-user-circle fa-fw"></i></p>
                    <h2 class="card__title">@item.CustomerName</h2>
                    <p class="heading__credits">@item.Address</p>
                    <p class="heading__price">Rs. @item.orderprice</p>
                    <div class=" bu">

                        <p class="card__apply">
                            <a class="btn btn-success" href="@Url.Action("OrdercompleteAdmin1", new { @item.id })  ">Complete</a>

                        </p>

                    </div>

                </div>


            </div>

        }
    }




</div>
