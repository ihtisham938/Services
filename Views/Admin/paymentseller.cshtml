@model OnlineHomeServices.DAL.Tbl_Orders
<link href="~/Content/cardstyle.css" rel="stylesheet" />

@{
    ViewBag.Title = "paymentseller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@{


    <div class="main-container">
        <div class="heading">
            <h1 class="heading__title">Payment</h1>
            <p class="heading__credits"><a class="heading__link" target="_blank" href="https://dribbble.com/sl">You can get payment in hand no third party involved</a></p>
        </div>
        <div class="cards">
            <div class="card card-1">
                <div class="card__icon"><i class="fa fa-magnet"></i></div>
           
                <h2 class="card__title">Order was compleated</h2>
                <br>
                <h3 class="card__desc">Rs. @Html.ViewData.Model.orderprice</h3>

                @if (Html.ViewData.Model.Paymentstatus.Equals("Submited  "))
                {
                    @*<p class="card__apply">
                <button class="button-63 "><a class="card__link" href="#">Mark as pay </a></button>
            </p>*@



                    <div class="text-box">
                        <p style="color:white">If you got paid hit recived payment button.</p>
                        <a href="@Url.Action("paymentdone", "Admin", new { id = Html.ViewData.Model.id })" class="btn card__link btn-white btn-        animate">Recived Payment</a>
                    </div>
                }

                else if(Html.ViewData.Model.Paymentstatus.Equals("Pending   "))
                {
                    <p class="card__apply">
                        <h5 class="card__desc" style="color:white; font-weight:500;">Payment Pending</h5>
                    </p>
                }
                else if (Html.ViewData.Model.Paymentstatus.Equals("paid      "))
                {
                <p class="card__apply">
                    <h5 class="card__desc" style="color:white; font-weight:500;">Payment Done</h5>
                </p>
                }

            </div>

        </div>
    </div>

}

